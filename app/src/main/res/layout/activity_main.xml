<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#ffffff"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/t2"
        android:background="#cfcfcf"
        android:textColor="#191919"
        android:textSize="28sp"
        android:textStyle="italic"
        android:text=""/>
    <TextView
        android:id="@+id/disp"
        android:gravity="right|center_vertical"
        android:textSize="40sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#e6e6e6"
        android:text=""
        android:layout_below="@+id/t2"
        />
    <Button
        android:layout_below="@+id/disp"
        android:id="@+id/seven"
        android:textSize="40sp"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:text="7"
        android:textColor="#4d4d4d"
        android:onClick="btndisp"
        android:background="#bfdbdb"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />
    <Button
        android:textColor="#4d4d4d"
        android:textStyle="bold"
        android:layout_below="@+id/disp"
        android:layout_toRightOf="@+id/seven"
        android:id="@+id/eight"
        android:textSize="40sp"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:text="8"
        android:onClick="btndisp"
        android:background="#bfdbdb"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_below="@+id/disp"
        android:textColor="#4d4d4d"
        android:layout_toRightOf="@+id/eight"
        android:id="@+id/nine"
        android:textSize="40sp"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:textStyle="bold"
        android:text="9"
        android:onClick="btndisp"
        android:background="#bfdbdb"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_below="@+id/disp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/nine"
        android:id="@+id/div"
        android:textSize="40sp"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:textColor="#333333"
        android:text="/"
        android:onClick="btndisp"
        android:textStyle="bold"
        android:background="#75a3ff"
        android:layout_marginLeft="9dp"/>

    <Button
        android:layout_below="@+id/seven"
        android:id="@+id/four"
        android:textSize="40sp"
        android:layout_width="78dp"
        android:textStyle="bold"
        android:layout_height="80dp"
        android:text="4"
        android:textColor="#4d4d4d"
        android:onClick="btndisp"
        android:background="#bfdbdb"
        android:layout_marginTop="5dp"/>
    <Button
        android:layout_below="@+id/eight"
        android:layout_toRightOf="@+id/four"
        android:id="@+id/five"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_marginTop="5dp"
        android:textColor="#4d4d4d"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:text="5"
        android:onClick="btndisp"
        android:background="#bfdbdb"
        android:layout_marginLeft="5dp"/>
    <Button
        android:layout_below="@+id/nine"
        android:layout_toRightOf="@+id/five"
        android:id="@+id/six"
        android:textSize="40sp"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:text="6"
        android:textStyle="bold"
        android:textColor="#4d4d4d"
        android:onClick="btndisp"
        android:background="#bfdbdb"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:layout_below="@+id/div"
        android:layout_toRightOf="@+id/six"
        android:id="@+id/mul"
        android:textSize="36sp"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="X"
        android:textColor="#333333"
        android:textStyle="bold"
        android:onClick="btndisp"
        android:background="#75a3ff"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:layout_below="@+id/four"
        android:id="@+id/one"
        android:textSize="40sp"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:text="1"
        android:textStyle="bold"
        android:textColor="#4d4d4d"
        android:onClick="btndisp"
        android:background="#bfdbdb"
        android:layout_marginTop="5dp"/>
    <Button
        android:layout_below="@+id/five"
        android:layout_toRightOf="@+id/one"
        android:id="@+id/two"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:text="2"
        android:textColor="#4d4d4d"
        android:onClick="btndisp"
        android:background="#bfdbdb"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:layout_below="@+id/six"
        android:layout_toRightOf="@+id/two"
        android:id="@+id/three"
        android:textSize="40sp"
        android:textColor="#4d4d4d"
        android:textStyle="bold"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:text="3"
        android:onClick="btndisp"
        android:background="#bfdbdb"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:layout_below="@+id/mul"
        android:layout_toRightOf="@+id/three"
        android:id="@+id/sub"
        android:textSize="49sp"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:text="-"
        android:onClick="btndisp"
        android:layout_marginTop="5dp"
        android:background="#75a3ff"
        android:layout_marginLeft="9dp"/>
    <Button
        android:id="@+id/zero"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_below="@+id/one"
        android:text="0"
        android:textColor="#4d4d4d"
        android:textStyle="bold"
        android:textSize="40sp"
        android:onClick="btndisp"
        android:background="#bfdbdb"
        android:layout_marginTop="5dp"/>
    <Button
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/zero"
        android:id="@+id/dot"
        android:textColor="#333333"
        android:textSize="50sp"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:text="."
        android:textStyle="bold"
        android:onClick="btndisp"
        android:background="#75a3ff"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:id="@+id/ce"
        android:textStyle="bold"
        android:layout_below="@+id/three"
        android:layout_toRightOf="@+id/dot"
        android:text="CE"
        android:textColor="#333333"
        android:textSize="40sp"
        android:onClick="onclickce"
        android:background="#75a3ff"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:id="@+id/plus"
        android:layout_below="@+id/sub"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/ce"
        android:text="+"
        android:textColor="#333333"
        android:textSize="40sp"
        android:onClick="btndisp"
        android:background="#75a3ff"
        android:layout_marginLeft="9dp"
        android:textStyle="bold"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:id="@+id/equ"
        android:layout_below="@+id/ce"
        android:text="="
        android:textSize="50sp"
        android:background="#5c8ae6"
        android:onClick="onclickequal"
        android:textColor="#000066"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
